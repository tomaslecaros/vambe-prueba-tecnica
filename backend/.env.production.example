# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================
NODE_ENV="production"

# Supabase PostgreSQL (obtener de Supabase Dashboard → Settings → Database)
# Transaction mode (pooler) - para la aplicación
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Session mode (direct) - para migraciones de Prisma
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# Upstash Redis (obtener de Upstash Dashboard)
REDIS_URL="rediss://default:[PASSWORD]@[HOST].upstash.io:6379"

# API Keys
OPENAI_API_KEY="sk-proj-xxx"

# Server
PORT=3001
